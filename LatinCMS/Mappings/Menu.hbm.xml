<?xml version="1.0" encoding="utf-8"?>
<hibernate-mapping assembly="LatinCMS" namespace="LatinCMS.Models" xmlns="urn:nhibernate-mapping-2.2">
  <class name="Menu" table="menu" lazy="true" >
    <id name="Id" column="id">
      <generator class="identity" />
    </id>
    <many-to-one name="Post">
      <column name="post_id" sql-type="int" not-null="true" />
    </many-to-one>
    <many-to-one name="Menu">
      <column name="padre_id" sql-type="int" not-null="false" />
    </many-to-one>
    <property name="Titulo">
      <column name="titulo" sql-type="nvarchar" not-null="true" />
    </property>
    <bag name="Menu">
      <key column="padre_id" />
      <one-to-many class="Menu" />
    </bag>
  </class>
</hibernate-mapping>