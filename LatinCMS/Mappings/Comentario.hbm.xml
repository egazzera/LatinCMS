<?xml version="1.0" encoding="utf-8"?>
<hibernate-mapping assembly="LatinCMS" namespace="LatinCMS.Models" xmlns="urn:nhibernate-mapping-2.2">
  <class name="Comentario" table="comentario" lazy="true" >
    <id name="Id" column="id">
      <generator class="identity" />
    </id>
    <many-to-one name="Post">
      <column name="post_id" sql-type="int" not-null="true" />
    </many-to-one>
    <many-to-one name="Estadocomen">
      <column name="ec_id" sql-type="int" not-null="true" />
    </many-to-one>
    <property name="Descripcion">
      <column name="descripcion" sql-type="nvarchar" not-null="false" />
    </property>
    <bag name="Post">
      <key column="id" />
      <one-to-many class="Comentario" />
    </bag>
  </class>
</hibernate-mapping>