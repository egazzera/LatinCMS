                    $("#mostrarCamposNewPage").hide();
                    $("#mostrarCamposNewPost").hide();
                    $("#mostrarCamposNewUser").hide();
                    $("#mostrarCamposAjustes").hide();
                    $("#mensajeJsonOk").hide();
